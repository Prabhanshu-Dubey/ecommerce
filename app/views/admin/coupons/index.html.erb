<p id="notice"><%= notice %></p>

<h1>Listing Coupons</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Code</th>
      <th>Description</th>
      <th>Merchant</th>
      <th>Views</th>
      <th>Discount</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coupons.each do |coupon| %>
      <tr>
        <td><%= coupon.code %></td>
        <td><%= coupon.description %></td>
        <td><%= coupon.merchant.name %></td>
        <td><%= coupon.views %></td>
        <td><%= coupon.discount %></td>
        <td><%= coupon.start_date %></td>
        <td><%= coupon.end_date %></td>
        <td><%= link_to 'Show', [:admin, coupon] %></td>
        <td><%= link_to 'Edit', edit_admin_coupon_path(coupon) %></td>
        <td><%= link_to 'Destroy', [:admin, coupon], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

