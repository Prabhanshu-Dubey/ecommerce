<p id="notice"><%= notice %></p>

<h1>Listing Brands</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Logo</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td>
          <% if brand.logo.present? %>
            <%= image_tag(brand.logo, style: "width: 40px; height: 40px;") %>
          <% else %>
            
          <% end %>
        </td>
        <td><%= brand.name %></td>
        <td><%= brand.description %></td>
        <td><%= link_to 'Show', admin_brand_path(brand) %></td>
        <td><%= link_to 'Edit', edit_admin_brand_path(brand) %></td>
        <td><%= link_to 'Destroy', admin_brand_path(brand), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

